{
    "name": "tkc-auth",
    "version": "0.0.1",
    "description": "Proof-of-concept and initial implementation outside of Flare",
    "publisher": "floralph",
	"engines": {
		"vscode": "^1.90.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/floralph/tkc-auth"
	},
    "private": true,
	"main": "./packages/extension/dist/client",
	"activationEvents": [
		"onStartupFinished" 
	],
    "contributes": {
        "commands": [
            {
                "command": "tkc-auth.getSsoToken",
                "title": "Get SSO token with TKC Auth"
            },
            {
                "command": "tkc-auth.listProfiles",
                "title": "List profiles with TKC Auth"
            },
            {
                "command": "tkc-auth.invalidateSsoToken",
                "title": "Invalidate with TKC Auth"
            }
        ]
    },    
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
		"vscode:prepublish": "npm run compile",        
        "compile": "tsc -b --verbose"
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "prettier": "^3.3.3",
        "typescript": "^5.5.3",
        "typescript-eslint": "^7.16.1",
        "@types/node": "^20.14.11",
        "ts-node": "^10.9.2"
    }
}
