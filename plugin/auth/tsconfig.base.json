{
    "compilerOptions": {
        "target": "es2023",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "declaration": true,
        "strict": true,
        "incremental": true,
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "rootDir": "${configDir}/src",
        "outDir": "${configDir}/dist"
    },
    "include": ["${configDir}/src"],
    "exclude": ["${configDir}/node_modules"]
}